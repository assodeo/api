<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.29.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1745382062875-1" author="juan">
        <createTable tableName="associations">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_associations_id"/>
            </column>
            <column name="name" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="VARCHAR(500)"/>
        </createTable>
    </changeSet>
    <changeSet id="1745382062875-2" author="juan">
        <createTable tableName="membership_roles">
            <column name="membership_id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_membership_roles_membership_id"/>
            </column>
            <column name="role_id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_membership_roles_role_id"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="1745382062875-3" author="juan">
        <createTable tableName="memberships">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_memberships_id"/>
            </column>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="association_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="1745382062875-4" author="juan">
        <createTable tableName="permissions">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_permissions_id"/>
            </column>
            <column name="name" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="1745382062875-5" author="juan">
        <createTable tableName="role_permissions">
            <column name="role_id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_role_permissions_role_id"/>
            </column>
            <column name="permission_id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_role_permissions_permission_id"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="1745382062875-6" author="juan">
        <createTable tableName="roles">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_roles_id"/>
            </column>
            <column name="name" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="association_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="1745382062875-7" author="juan">
        <createTable tableName="users">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_users_id"/>
            </column>
            <column name="username" type="VARCHAR(150)">
                <constraints nullable="false"/>
            </column>
            <column name="password" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="first_name" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="last_name" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="1745382062875-8" author="juan">
        <addUniqueConstraint columnNames="user_id, association_id"
                             constraintName="uc_memberships_user_id_association_id"
                             tableName="memberships"/>
    </changeSet>
    <changeSet id="1745382062875-9" author="juan">
        <addUniqueConstraint columnNames="association_id, name"
                             constraintName="uc_roles_association_id_name"
                             tableName="roles"/>
    </changeSet>
    <changeSet id="1745382062875-10" author="juan">
        <addUniqueConstraint columnNames="name" constraintName="uc_permissions_name" tableName="permissions"/>
    </changeSet>
    <changeSet id="1745382062875-11" author="juan">
        <addUniqueConstraint columnNames="username" constraintName="uc_users_username" tableName="users"/>
    </changeSet>
    <changeSet id="1745382062875-12" author="juan">
        <addForeignKeyConstraint baseColumnNames="association_id" baseTableName="memberships"
                                 constraintName="fk_memberships_association_id"
                                 referencedColumnNames="id" referencedTableName="associations"
                                 onDelete="CASCADE"/>
    </changeSet>
    <changeSet id="1745382062875-13" author="juan">
        <addForeignKeyConstraint baseColumnNames="user_id" baseTableName="memberships"
                                 constraintName="fk_memberships_user_id"
                                 referencedColumnNames="id" referencedTableName="users"
                                 onDelete="CASCADE"/>
    </changeSet>
    <changeSet id="1745382062875-14" author="juan">
        <addForeignKeyConstraint baseColumnNames="association_id" baseTableName="roles"
                                 constraintName="fk_roles_association_id"
                                 referencedColumnNames="id" referencedTableName="associations"
                                 onDelete="CASCADE"/>
    </changeSet>
    <changeSet id="1745382062875-15" author="juan">
        <addForeignKeyConstraint baseColumnNames="membership_id" baseTableName="membership_roles"
                                 constraintName="fk_membership_roles_membership_id"
                                 referencedColumnNames="id" referencedTableName="memberships"/>
    </changeSet>
    <changeSet id="1745382062875-16" author="juan">
        <addForeignKeyConstraint baseColumnNames="role_id" baseTableName="membership_roles"
                                 constraintName="fk_membership_roles_role_id"
                                 referencedColumnNames="id" referencedTableName="roles"/>
    </changeSet>
    <changeSet id="1745382062875-18" author="juan">
        <addForeignKeyConstraint baseColumnNames="role_id" baseTableName="role_permissions"
                                 constraintName="fk_role_permissions_role_id"
                                 referencedColumnNames="id" referencedTableName="roles"/>
    </changeSet>
    <changeSet id="1745382062875-17" author="juan">
        <addForeignKeyConstraint baseColumnNames="permission_id" baseTableName="role_permissions"
                                 constraintName="fk_role_permissions_permission_id"
                                 referencedColumnNames="id" referencedTableName="permissions"/>
    </changeSet>
</databaseChangeLog>
